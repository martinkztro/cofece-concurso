---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="bg-white w-full shadow-slate-500 shadow-sm fixed top-0">
			<img src="public/cofece-logos.png" alt="">
		
			<div class="flex px-3 justify-between items-center bg-cyan-500 py-1">
				<img class="w-6 h-6" src="public/filter.png" alt="">
				<div class="flex justify-center gap-3 py-2">
					<input class="rounded-xl px-3 py-1" type="search" placeholder="Ingrese su bÃºsqueda" name="search">
					<button class="bg-yellow-400 px-7 rounded-2xl shadow-md" type="submit">
						<img class="w-6 h-6" src="public/search.png" alt="">
					</button>
				</div>
			</div>
		</header>

		<slot/>

		<nav class="bg-cyan-500 fixed bottom-0 w-full shadow-black shadow-xl">
			<ul class="flex justify-between items-center py-1 px-2">
				<li class="flex flex-col justify-center items-center">
					<img src="public/news.png" alt="Logo" class="h-6">
					<a href="">Noticias</a>
				</li>
				<li class="flex flex-col justify-center items-center">
					<img src="public/dates.png" alt="Logo" class="h-6">
					<a href="">Agenda</a>
				</li>
				<li class="bg-yellow-400 p-3 px-4 shadow-xl rounded-full flex flex-col justify-center items-center">
					<img src="public/home.png" alt="Logo" class="w-6 h-6">
					<a href="">Inicio</a>
				</li>
				<li class="flex flex-col justify-center items-center">
					<img src="public/account.png" alt="Logo" class="h-6">
					<a href="">Cuenta</a>
				</li>
				<li class="flex flex-col justify-center items-center">
					<img src="public/help.png" alt="Logo" class="h-6">
					<a href="">Ayuda</a>
				</li>
			</ul>
		
		</nav>
		
	</body>
</html>