        <li class="flex flex-col justify-center items-center bg-[#00C7B1] px-4 py-2 border-[2px] border-slate-500 border-dashed shadow-md rounded-full fixed bottom-5">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-category-2" width="35" height="35" viewBox="0 0 24 24" stroke-width="1.5" stroke="#333F48" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
