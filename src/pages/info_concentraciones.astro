---
import Layout from '../layouts/Layout.astro';
const ruta = "http://localhost:4321/DATOS_COFECE.json";

const getInfo = async () => {
  const res = await fetch(ruta);
  const data = await res.json();
  const concentraciones = data.concentraciones || [];
  const elementos = concentraciones.slice(0, 20);
  return elementos;
};
const c = await getInfo();
/*console.log(c);*/
