<Layout title="Asuntos del pleno">
	<section class="mt-48 font-bold text-black-700">
        <div class="hero__bienvenida">
            <p>Bienvenido(a) al</p>
            <h1>Panel de Concentraciones</h1>
        </div>

    </section>
 
    <main>
        <button type="button">Siguiente</button>
        <div class="reservaciones__container">
            <ul class="lista__eventos">
                    <li class="border-2 border-black">									
                        <div class="evento">
                            <p class="font-bold mb-5 border-b-2 border-black p-2">EXPEDIENTE</p>
                            <!--<p class="font-bold mb-5 border-b-2 border-black p-2">FALTA AGENTES ECONOMICOS/ETC</p>-->
