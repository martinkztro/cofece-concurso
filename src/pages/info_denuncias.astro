---
import Layout from '../layouts/Layout.astro';
var ruta = "http://localhost:4321/DATOS_COFECE.json";
const getInfo = async () => {
  const res = await fetch(ruta);
  const data = await res.json();
  const denuncias = data.denuncias || [];
  const elementos = denuncias.slice(0,50);
  return elementos;
};
const c = await getInfo();
---
<Layout title="Asuntos del pleno"> 
    <div class="mt-28 p-5 h-screen">
        <div class="overflow-auto rounded-lg shadow hidden md:block pb-16">
          <table class="w-full">
            <thead class="bg-gray-50 border-b-2 border-gray-200">
            <tr>
              <th class="w-20 p-3 text-sm font-semibold tracking-wide text-left">EXPEDIENTE</th>
              <th class="p-3 text-sm font-semibold tracking-wide text-center">RESULTADO</th>
              <th class="w-24 p-3 text-sm font-semibold tracking-wide text-left">INGRESO</th>
              <th class="w-24 p-3 text-sm font-semibold tracking-wide text-left">FIN</th>
              <th class="w-32 p-3 text-sm font-semibold tracking-wide text-left">DG</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                {
                    c.map(cons =>(
                    <tr class="bg-white">
                    <td class="p-3 text-sm text-gray-700 whitespace-nowrap">
                        <a href="#" class="font-bold text-blue-500 hover:underline">{cons.expediente}</a>
                    </td>
                    <td class="p-3 text-sm text-center text-gray-700 whitespace-nowrap">
                        {cons.resultado}
                    </td>
                    <td class="p-3 text-sm text-gray-700 whitespace-nowrap">
                    <span
                        class="p-1.5 text-xs font-medium uppercase tracking-wider text-green-800 bg-green-200 rounded-lg bg-opacity-50">{cons.ingreso}</span>
                    </td>
                    <td class="p-3 text-sm text-green-800 whitespace-nowrap">
                        <span
                        class="p-1.5 text-xs font-medium uppercase tracking-wider text-red-800 bg-red-200 rounded-lg bg-opacity-50">{cons.fin}</span>
                    </td>
                    <td class="p-3 text-sm text-gray-700 whitespace-nowrap">{cons.dg}</td>
                    </tr>
                    ))
                }
            </tbody>
          </table>
        </div>
     
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 md:hidden pb-20">
          {
            c.map(cons =>(
                <div class="bg-white space-y-3 p-4 rounded-lg shadow">
                    <div class="flex items-center space-x-2 text-sm">
                        <div>
                            <a href="#" class="p-1.5 text-xs font-medium uppercase tracking-wider text-green-800 bg-green-200 rounded-lg bg-opacity-50">{cons.ingreso}</a>
                        </div>
                        <div class="text-gray-500">{cons.expediente}</div>
                        <div>
                            <span
                            class="text-black-500 font-bold hover:underline">{cons.dg}</span>         
                        </div>
                    </div>
                    <div class="text-sm text-gray-700">
                    {cons.resultado}
                    </div>
                    <div class="text-sm font-medium text-black">
                        <span
                        class="p-1.5 text-xs font-medium uppercase tracking-wider text-red-800 bg-red-200 rounded-lg bg-opacity-50">{cons.fin}</span>
                    </div>
                </div>
            ))
          }
    </div>
</Layout>