---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="Asuntos del pleno">
	<main class="mt-36 lg:px-36 px-4 mb-24">
		<section class="mb-6">
		<h1 style="color: #7B7B7B; font-size: 36px; margin-left:12px;">CUENTA DESTACADA</h1>
		
		<h3 class="md:text-2xl text-center" style="color: #7B7B7B;" >Regístrate al boletin informativo de Cofece</h3>
	    
		<div class="text-center gap-3 py-3 mt-2 mb-2">
            <p>Ingresa tu nombre</p>
            <input class="rounded-xl px-2 py-1 my-2 bg-[#333f4810] border-[1px] border-slate-300 md:w-80" type="text" placeholder="Nombre:" name="text">
            <p>Ingresa tu correo electronico</p>
            <input class="rounded-xl px-2 py-1 mt-2 bg-[#333f4810] border-[1px] border-slate-300 md:w-80" type="email" placeholder="Correo electronico:" name="text">
            
        </div>
        <h3 class="md:text-2xl text-center" style="color: #7B7B7B;" >¿Que información te gustaria recibir? </h3>
           <br>
     
        <table style="margin: auto;">
            <thead >
                <tr>
                    <th>Secciones</th>
                    <th>Correo</th>
                    <th>Web</th>
                </tr>
            </thead>
            <tbody >
                <tr class="text-center">
                    <td>Comunicados</td>
                    <td><input type="checkbox" name="comunidados" class="email"></td>
                    <td><input type="checkbox" name="comunidados" class="web"></td>
                </tr>
                <hr>
                <tr class="text-center">
                    <td>Discursos y presentaciones</td>
                    <td><input type="checkbox" name="discursosypresentaciones" class="email"></td>
                    <td><input type="checkbox" name="discursosypresentaciones" class="web"></td>
                </tr>
                <tr class="text-center">
                    <td>Asuntos por resolver</td>
                    <td><input type="checkbox" name="asuntosporresolver" class="email"></td>
                    <td><input type="checkbox" name="asuntosporresolver" class="web"></td>
                </tr>
                <tr class="text-center">
                    <td>Asuntos resueltos</td>
                    <td><input type="checkbox" name="asuntosresueltos" class="email"></td>
                    <td><input type="checkbox" name="asuntosresueltos" class="web"></td>
                </tr>
                <tr class="text-center">
                    <td>Información</td>
                    <td><input type="checkbox" name="informacion" class="email"></td>
                    <td><input type="checkbox" name="informacion" class="web"></td>
                </tr>
                </tbody>
                </table>
                <br>
                <br>
                <br>

                <a href="">
                <h3 class="more" >Confirmar</h3>
                </a>
    
    

    </main>

    <Navbar selected="" textSelected="" selected2="" textSelected2="" />
</Layout>
   
<style>
	

	.more {
		background-color: rgb(216, 216, 216);
		margin: auto;
		display: flex;
        width: 37%;
        font-size: 25px;
		justify-content: center;
		align-items: center;
		transition: .3s;
		border-radius: 10px;
	}


   

	.more:hover{
		background-color:#00a099;
		color: aliceblue;
	}

	
	.astro-a {
		position: absolute;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;

	}
    .perfil{
        margin: auto;
    }

	hr{
        background-color:#00a099;
        height: 0.1em;
        border-radius:1.5rem;
        clear: both;
		margin-left: 6%;
    }

    .context{
        text-align: center;
	
    }

	h1 {
		font-size: 3rem;
		font-weight: 620;
		line-height: 1.3;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

	
</style>



