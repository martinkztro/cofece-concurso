<style>
	main {
        justify-content: center;
        margin: 7rem auto;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: rgb(255, 255, 255);
		font-size: 20px;
		background-color: rgb(255, 255, 255);
		line-height: 1.6;
	}

   strong{
    color: black;
   }

	.more {
		margin: auto;
		display: flex;
        width: 90%;
		justify-content: center;
		align-items: center;
		transition: .3s;
		border-radius: 10px;
	}

	.more:hover{
        color: aliceblue;
		background-color:#00a099;
	}

	
	.astro-a {
		position: absolute;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;

	}
    .perfil{
        margin: auto;
    }

	hr{
        background-color:#00a099;
        height: 0.1em;
        border-radius:1.5rem;
        clear: both;
    }

    .context{
        text-align: center;
    }

    .context2{
        text-align: left;
    }

	h1 {
		font-size: 3rem;
		font-weight: 620;
		line-height: 1.3;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>