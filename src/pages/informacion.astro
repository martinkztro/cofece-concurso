---

<Layout title="Asuntos de Información">
	<main class="mx-auto my-32">
		<h1 style="color: #7B7B7B;">APARTADO DE INFORMACIÓN</span></h1>
		
		<ul role="list" class="link-card-grid">	
			<Card
				href="info_concentraciones"
				title="Concentraciones"
				body=""   
			/>
			<Card
				href="info_denuncias"
				title="Denuncias"
				body=""   
			/>
			<Card
				href="info_iebc_y_dc"
				title="IEBC y DC"
				body=""   
			/>
			<Card
				href="info_investigaciones_pm_ci"
				title="Investigaciónes PM y CI"
				body=""   
			/>
			<Card
				href="info_opiniones"
				title="Opiniones"
				body=""   
			/>
		</ul>
	</main>

	<Navbar selected='' textSelected='' selected2='' textSelected2=''/>
</Layout>

<style>

	body {
		overflow: scroll;
	}
	main {
        justify-content: center;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: rgb(255, 255, 255);
		font-size: 20px;
		background-color: rgb(255, 255, 255);
		line-height: 1.6;
	}

	h1 {
		font-size: 3rem;
		font-weight: 620;
		line-height: 1.3;
		text-align: center;
		margin-bottom: 1em;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
	
</style>